<Window x:Class="AlchemyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Alchemy Game" Height="470" Width="1100"
        Background="#FF1E140D"
        FontFamily="Palatino Linotype, Georgia, Serif">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="#FF2C1E16" BorderBrush="#FF8B6914" BorderThickness="8,0,0,0">
            <Grid Margin="10,15,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            
                <Button Content="Clear Canvas"
                        Height="65"
                        Margin="0,0,0,15"
                        FontSize="19"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="ClearCanvasButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="Bg" Background="#FF3C2F1F" CornerRadius="12"
                                        BorderThickness="4" BorderBrush="#FF1A1208">
                                    <Border Margin="4" Background="#FF4A3828" CornerRadius="8"
                                            BorderBrush="#FF8B6914" BorderThickness="2"/>
                                </Border>
                                <ContentPresenter x:Name="Content" HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" Margin="10">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect Color="Black" Direction="320"
                                                          ShadowDepth="3" BlurRadius="4" Opacity="0.9"/>
                                    </ContentPresenter.Effect>
                                    <TextBlock.Foreground>#FFD4AF37</TextBlock.Foreground>
                                    <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
                                </ContentPresenter>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#FF4A3520"/>
                                    <Setter TargetName="Bg" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FF8B6914" Opacity="0.4" BlurRadius="12"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Content" Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="2"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="Bg" Property="Background" Value="#FF2C2015"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            
                <Border Grid.Row="1"
                        Background="#FF1E140D"
                        CornerRadius="12"
                        BorderBrush="#FF8B6914"
                        BorderThickness="8,8,8,25"
                        >

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="8">
                        <ListBox x:Name="ElementsList"
                                 ItemsSource="{Binding Elements}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewMouseLeftButtonDown="ElementsList_PreviewMouseLeftButtonDown">

                         
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                            
                                    <Border Background="#FF3C2A1A"
                                            CornerRadius="10"
                                            Margin="4,8"
                                            Padding="12,10"
                                            BorderBrush="#FF8B6914"
                                            BorderThickness="2"
                                            >
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding IconPath}"
                                                   Width="42" Height="42"
                                                   Margin="0,0,14,0"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFD4AF37"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="3"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <Canvas x:Name="GameCanvas"
                Grid.Column="0"
                AllowDrop="True"
                Drop="Canvas_Drop"
                DragOver="Canvas_DragOver"
                Margin="20,20,20,135"
                Background="Transparent">

            <Image Source="pack://application:,,,/Images/background.avif"
                   Stretch="UniformToFill"
                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                   Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>

            <Rectangle Fill="#AA000000"
                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                       Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>

            <TextBlock Text="Drag elements here!"
                      Foreground="#FF9D4EDD"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                       Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="12"/>
                </TextBlock.Effect>
            </TextBlock>
            
        </Canvas>
    </Grid>
</Window>