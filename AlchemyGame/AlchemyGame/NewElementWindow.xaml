<Window x:Class="AlchemyGame.ViewModel.NewElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Element Discovered!"
        Height="380" Width="420"
        Background="#FF1E140D"
        FontFamily="Palatino Linotype, Georgia, Serif"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- Ancient brass-bordered parchment window -->
    <Border Background="#FF2C1E16"
            CornerRadius="20"
            BorderBrush="#FF8B6914"
            BorderThickness="10"
           >

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Mystical title with purple glow -->
            <TextBlock x:Name="ElementNameText"
                       Text="New Element"
                       Foreground="#FF9D4EDD"
                       FontSize="32"
                       FontWeight="Bold"
                       FontFamily="Breathe Fire, Palatino Linotype"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFBB86FC" ShadowDepth="0" BlurRadius="20"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Element icon on ancient rune circle -->
            <Border Grid.Row="1"
                    Background="#FF3C2A1A"
                    CornerRadius="80"
                    Width="160" Height="160"
                    BorderBrush="#FF8B6914"
                    BorderThickness="6"
                    Padding="8">
                <Border.Effect>
                    <DropShadowEffect Color="#FF8B6914" Opacity="0.6" BlurRadius="20"/>
                </Border.Effect>

                <Image x:Name="ElementIcon"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>

            <!-- Ancient "OK" stone button -->
            <Button Grid.Row="2"
                    Content="OK"
                    Width="120" Height="55"
                    Margin="0,25,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="OkButton_Click"
                    HorizontalAlignment="Center">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="#FF3C2F1F" CornerRadius="14"
                                    BorderThickness="5" BorderBrush="#FF1A1208">
                                <Border Margin="5" Background="#FF4A3828" CornerRadius="9"
                                        BorderBrush="#FF8B6914" BorderThickness="3"/>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect Color="Black" Direction="320"
                                                      ShadowDepth="3" BlurRadius="5" Opacity="0.9"/>
                                </ContentPresenter.Effect>
                                <TextBlock.Foreground>#FFD4AF37</TextBlock.Foreground>
                                <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
                            </ContentPresenter>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#FF4A3520"/>
                                <Setter TargetName="Bg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF8B6914" Opacity="0.5" BlurRadius="16"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                               
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>